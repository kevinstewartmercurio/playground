---
type Props = {
  href: string;
  src: string;
  title: string;
  gsap: boolean;
  threejs: boolean;
};

const { href, src, title, gsap, threejs } = Astro.props;

const gsapStr =
  "https://img.shields.io/badge/GSAP-93CF2B?style=for-the-badge&logo=greensock&logoColor=whitee";
const threejsStr =
  "https://img.shields.io/badge/ThreeJs-black?style=for-the-badge&logo=three.js&logoColor=white";
---

<a
  href={href}
  class="flex flex-col overflow-clip rounded-lg bg-gray-700/50 transition duration-500 hover:scale-[1.0125] focus:scale-[1.0125]"
>
  <div class="h-72 w-96 p-2">
    <video
      src={src}
      class="h-full w-full rounded-md object-cover"
      autoplay
      loop
      muted
      playsinline
    >
    </video>
  </div>
  <div class="w-96 px-4 pb-2.5">
    <h2 class="line-clamp-1 text-3xl text-white">
      {title}
    </h2>
    <ul class="mt-2 flex flex-wrap gap-x-2 gap-y-1">
      {threejs && <img src={threejsStr} alt="" class="rounded-md" />}
      {gsap && <img src={gsapStr} alt="" class="rounded-md" />}
    </ul>
  </div>
</a>
