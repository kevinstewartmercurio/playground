---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/project-card.astro";

import chapter1Mp4 from "/videos/chapter-1.mp4";
import variableFontsMp4 from "/videos/variable-fonts.mp4";
---

<Layout title="Playground">
  <main class="min-h-screen w-full px-5">
    <div
      class="mx-auto flex h-screen w-full max-w-[1536px] items-center justify-center"
    >
      <ul class="grid grid-cols-3 items-center justify-center gap-x-6 gap-y-4">
        <ProjectCard
          href="/chapter-1"
          src={chapter1Mp4}
          title="Chapter 1 - Three.js Journey"
          gsap
          threejs
        />
        <ProjectCard
          href="/variable-fonts"
          src={variableFontsMp4}
          title="Variable Fonts"
          css
        />
      </ul>
    </div>
  </main>
</Layout>
